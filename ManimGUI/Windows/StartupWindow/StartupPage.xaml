<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManimGUI.Windows.StartupWindow.StartupPage" Title="Manim GUI">
    
    <Grid HorizontalOptions="Center">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
            Text="Manim GUI"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            Grid.Row="0"
            VerticalOptions="Center"
            FontSize="72"
            FontFamily="CambriaMath"/>
        <HorizontalStackLayout Grid.Row="1">
            <Button 
                x:Name="OpenProjectButton"
                Text="Open Project" 
                SemanticProperties.Hint="Open a project from a file"
                Clicked="OnOpenProject_Clicked"
                Style="{StaticResource StartupButton}"/>
            <Button
                x:Name="NewProjectButton"
                Text="New Project" 
                SemanticProperties.Hint="Create a new project"
                Clicked="OnNewProject_Clicked"
                Style="{StaticResource StartupButton}"/>
        </HorizontalStackLayout>
        
    </Grid>

        
    
</ContentPage>
